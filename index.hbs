{{!< default}}

{{> header}}

{{! The main content area on the homepage }}
<main class="content" role="main">


    {{#foreach posts}}

    <article class="{{post_class}}">
        <div class="row bg-white">

            <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 centered">
                <header class="index_post_header">     
                    <h2 class="index_post_title"><a href="{{url}}">{{{title}}}</a></h2>
                    <span class="index_date">
	                    <time datetime="{{date format='DD-MMM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
	                    <ul class="tags">
	                        {{#foreach tags}}
	                        <li><a href="{{url}}" title="{{name}}" class="tag-{{id}}">{{name}}</a></li>
	                        {{/foreach}}
                    	</ul>
                    </span>
                </header>
                <section class="index_post_content">
	                {{#if image}}
                    <div style="float: left; overflow: hidden; height: 165px; width: 200px; margin-right: 20px;">
                    	<img src="{{image}}" />
                    </div>
                    {{/if}}
                    {{excerpt words="80"}}
                </section>
            </div>
        
        </div>

    </article>


    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>

{{> footer}}